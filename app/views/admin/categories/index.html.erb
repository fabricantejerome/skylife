<% if notice.present? %>
  <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
<% end %>

<h1 class="text-2xl text-green-800 text-center uppercase font-medium mt-12">Categories</h1>

<div class="text-end">
    <%= link_to 'Add New', new_admin_category_path, class: 'py-2 px-4 bg-sky-600 text-white rounded' %>
</div>
    
<div class="relative overflow-x-auto shadow-md sm:rounded-lg mt-12">
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">
                    Name
                </th>
                <th scope="col" class="px-6 py-3">
                    Logo
                </th>
                <th scope="col" class="px-6 py-3">
                    Action
                </th>
            </tr>
        </thead>
        <tbody 
            data-controller="reorder" 
            data-action="dragstart->reorder#dragstart dragover->reorder#dragover drop->reorder#drop dragend->reorder#dragend dragenter->reorder#dragenter dragleave->reorder#dragleave"
            data-reorder-active-dropzone-class="border-dashed bg-gray-50 border-slate-400"
            data-reorder-drop-target-class="shadow-inner shadow-gray-500"
            >
            <% @admin_categories.each do |admin_category| %>
                <tr class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700" draggable="true" data-reorderable-id="<%= admin_category.id %>">
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                      <%= admin_category.name %>
                    </th>
                    <td class="px-6 py-4">
                      <%= image_tag admin_category.logo.present? ? admin_category.logo : '', class: "w-24 logo" %>
                    </td>
                    <td class="px-6 py-4">
                      <%= link_to 'Edit', edit_admin_category_path(admin_category), class: 'font-medium text-green-800 dark:text-green-500 hover:underline' %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>


