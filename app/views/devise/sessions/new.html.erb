<div class="w-1/4 mx-auto mt-32">
  <div class="mb-5">
    <p class="notice text-center text-lg text-green-600"><%= notice %></p>
    <p class="alert text-center text-lg text-red-600"><%= alert %></p>
  </div>

  <h1 class="font-medium text-center text-2xl mb-8">Skyife</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: "block text-center mb-2 text-xl" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "focus:outline-transparent focus:ring-transparent w-full mb-2 rounded-full text-center text-gray-500 text-xl" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "block text-center mb-2 text-xl"%>
      <%= f.password_field :password, autocomplete: "current-password", class: "focus:outline-transparent focus:ring-transparent w-full mb-4 rounded-full text-center text-xl text-gray-500" %>
    </div>

    <div class="actions text-center">
      <%= f.submit "Log in", class: 'bg-sky-500 text-white px-8 py-2 rounded-full uppercase font-medium text-xl' %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>



